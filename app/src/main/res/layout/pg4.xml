<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:clickable="true">


    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/page4animate" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/buttonNext4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginBottom="22dp"
        android:background="@anim/gold_button"
        android:onClick="jumpToPageFive" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/buttonPrev4"
        android:layout_alignTop="@+id/buttonNext4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:background="@anim/gold_button"
        android:onClick="jumpToPageThree" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:id="@+id/buttonClue4"
        android:layout_alignTop="@+id/buttonNext4"
        android:layout_centerHorizontal="true"
        android:background="@anim/gold_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;He dug until the hole was deepest and the dirt pile was at its highest. He sighed. 'I'm too tired. I can't dig anymore.' Then he spied something...&quot;"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonPlaySound4"
        android:layout_above="@+id/buttonClue4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/playsoundbuttongradianoff" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton1Pg4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:background="#0000"
        android:layout_marginTop="10dp" />

</RelativeLayout>
