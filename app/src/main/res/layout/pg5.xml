<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:clickable="true">


    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/page5basic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/buttonNext5"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_marginBottom="22dp"
        android:background="@anim/gold_button"
        android:onClick="jumpToPageSix" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/buttonPrev5"
        android:layout_alignTop="@+id/buttonNext5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:background="@anim/gold_button"
        android:onClick="jumpToPageFour" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:id="@+id/buttonClue5"
        android:layout_alignTop="@+id/buttonNext5"
        android:layout_centerHorizontal="true"
        android:background="@anim/gold_button" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="&quot;...but it was only one of Woofy's bones. Instead of treasure, all Jimmy had was a dog bone, a hole, and a big pile of dirt to fill it in with. He thought 'That pirate lied to me&quot;"
    android:id="@+id/textView5"
    android:layout_below="@+id/imageView5"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonPlaySound5"
        android:layout_above="@+id/buttonClue5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/playsoundbuttongradianoff" />

    <ImageButton
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton1Pg5"
        android:layout_alignTop="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:background="#0000"
        android:layout_marginTop="10dp" />
</RelativeLayout>
